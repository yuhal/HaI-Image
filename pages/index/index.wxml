<!--index.wxml-->
<!-- 蒙版效果 -->
<view class="mask" hidden="{{aflag}}" catchtap="closeMask">
    <view class="masks" catchtap="prevent" animation="{{ani}}">
        <view class="box">
            <image class="leftImage" mode="widthFix" src="https://wx.qlogo.cn/mmopen/vi_32/qeDfVAdQaLZy3hOuTcrZ37Ob7MQ6QVgVDWWRNyFHeeyuLiaKVHhpkzIShu3swUwQAL6ToUEVCFiayib5LmPaO6onA/132"></image>
            <view class="right">
                <view class="title">
                    <text class="name">HaI</text>
                </view>
                <view class="info">
                    <view class="field">Email</view>
                    <view class="value">15736736889@163.com</view>
                    <view class="field">Github</view>
                    <view class="value">https://github.com/yuhal</view>
                </view>
            </view>
        </view>

    </view>
</view>


<view class="container" >

    <!-- loading...加载 -->
    <i-spin fix wx:if="{{spinShow}}"></i-spin>

    <!-- 首页图片 -->
    <view class="top">
        <view class="aquanblog">
            {{blogName}}
            <view class="aquanblogs">我们能从绝望之山上砍下希望之石</view>
        </view>
        <view bindtap="showMask" class='qrcode'></view>
    </view>

    <view class="nav" hidden="{{nav}}">
        <view class="nav-text">{{blogName}}</view>
        <view bindtap="showMask" class='qrcode nav-qrcode'></view>
    </view>

    <!-- Posts -->
    <view class="post-card" wx:for="{{posts}}" wx:key="postId" animation="{{anp}}">
        <!-- Navigator页面跳转 -->
        <navigator url="../post/post?postId={{item.article_id}}">
            <view class="post-card-image-link">
                <image class="img" lazy-load="true" mode="widthFix" src="{{item.pic}}"></image>
            </view>
            <view class="post-card-content">
                <view class="title">{{item.article_title}}</view>
                <view class="footer" style="color: #cccccc;">
                    <i-avatar style="margin-right: 10px;" src="{{userAvatar}}" size="small"></i-avatar>
                    <i-tag wx:for="{{item.tags}}" type="border" style="margin-right: 5px;">
                        {{item.tag_name}}
                    </i-tag>
                    <view class="postDate">{{item.create_time}}</view>
                </view>
            </view>
        </navigator>
    </view>
    <i-message id="message" />
</view>


<i-load-more tip="{{Author}}" loading="{{loadMore}}" hidden="{{loadMores}}"/>
